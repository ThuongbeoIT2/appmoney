<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
        <!-- Thiết lập màu nền của viền -->
        <solid android:color="@color/white"/> <!-- Sửa màu nền cho viền -->

        <!-- Thiết lập đường viền -->
        <stroke android:width="1dp" android:color="@color/black"/> <!-- Sửa kích thước và màu sắc của đường viền -->

        <!-- Thiết lập góc cong của viền -->
        <corners android:radius="20dp"/> <!-- Điều chỉnh bán kính cong của các góc -->
    </shape>
</selector>