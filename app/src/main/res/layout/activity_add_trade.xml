<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddTradeActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:background="@color/trade_item"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageButton

                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:background="@null"
                android:layout_gravity="center"
                android:contentDescription="@string/back_button_description"
                android:padding="8dp" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Quay lại "
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_gravity="center"

                />
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/background_top"
            android:gravity="center"
            android:text="Thêm giao dịch"
            android:textColor="#FDFAFA"
            android:textSize="26sp" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/titletrade"
            android:layout_width="350dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:hint="Nội dung giao dịch"
            app:endIconDrawable="@drawable/icon_note"
            app:endIconMode="custom"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:inputType="text" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dateInputLayout"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ngày/Tháng/Năm"
                app:endIconDrawable="@drawable/icon_date"
                app:endIconMode="custom">


                <EditText
                    android:id="@+id/dateEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Cost"
            android:layout_width="350dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:hint="Chi phí"
            app:endIconDrawable="@drawable/baseline_monetization_on_24"
            app:endIconMode="custom">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:hint="Loại chi tiêu"
            >
            <LinearLayout
                android:layout_width="350dp"
                android:layout_gravity="center"
                android:layout_height="70dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cateName"
                    android:layout_width="238dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Loại chi tiêu"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:focusable="false"
                        android:inputType="text"
                        android:text="Chọn loại chi tiêu" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnSlCate"
                    android:layout_width="112dp"
                    android:layout_height="59dp"
                    android:layout_gravity="bottom"
                    android:text="Chọn"
                    android:textColor="@color/white"
                    app:backgroundTint="#FE5722" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/buttonaddtrade"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:text="Thêm giao dịch"
            android:layout_gravity="center"
            android:textColor="@color/white"
            app:backgroundTint="#FE5722" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>