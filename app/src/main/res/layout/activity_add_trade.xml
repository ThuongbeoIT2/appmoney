<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".model.CateRespone$add_trade">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:gravity="center"
            android:text="ThÃªm Trade"
            android:textSize="26sp"
            android:textColor="#12CF1A"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/titletrade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:inputType="text" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dateInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date">

                <EditText
                    android:id="@+id/dateEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cost">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/cateName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="   CateName"
                >

                <AutoCompleteTextView
                    android:id="@+id/cateAutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/buttonaddtrade"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Add Trade"
            android:textColor="@color/white"
            app:backgroundTint="#11DF19" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>